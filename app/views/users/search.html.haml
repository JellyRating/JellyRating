%h1 Search member

.row
  .col-md-6
    = form_tag users_path do

      = label :user, :name, 'Name'
      = text_field :user, 'name', :class => 'form-control'

      = submit_tag 'Find', :class => 'btn btn-primary'

%table.table
  %thead
    %tr
      %th Item Title
      %th Release Date
  %tbody
    - @item.each do |i|
      %tr
        %td= link_to(i.title, item_path(i))
        %td= i.release_date