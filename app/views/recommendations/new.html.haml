%h1 New Recommendation

.row
  .col-md-6
    = form_tag recommendations_path do

      = label :recommendation, :item1, 'Item 1'
      = select_tag 'item1', options_from_collection_for_select(@item, "id", "title"), prompt: "Select something"

      = label :recommendation, :item2, 'Item 2'
      = select_tag 'item2', options_from_collection_for_select(@item, "id", "title"), prompt: "Select something"

      = submit_tag 'Create Recommendation', :class => 'btn btn-primary'